@startuml

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!include https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/devicons/nginx.puml

title Deploy

Boundary(Docker, "Docker") {

    Person(user, "User", "")
    Container(Nginx, "Nginx", "Reverse Proxy")
    Container(Frontend, "Frontend", "Web Application")
    Container(Backend, "Backend", "API & Services")

    Rel(Nginx, Frontend, "Requests to static")
    Rel(Nginx, Backend, "Requests to API")
    Rel(user, Nginx, "HTTPS (443)")
}

@enduml
