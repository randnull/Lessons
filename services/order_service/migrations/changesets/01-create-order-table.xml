<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>
    
    <changeSet author="k.goryunov" id="create-order-table">
        <createTable tableName="orders" remarks="table with clients orders">
            <column name="id" type="${uuid_type}" defaultValueComputed="${uuid_function}" remarks="primery key uuid">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="student_id" type="${uuid_type}" remarks="">
                <constraints nullable="false"/> 
            </column>

            <column name="title" type="VARCHAR" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="grade" type="VARCHAR" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="tags" type="TEXT[]" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="min_price" type="INTEGER" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="max_price" type="INTEGER" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="response_count" type="INTEGER" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMPTZ" remarks="">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMPTZ" remarks="">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
</databaseChangeLog>
