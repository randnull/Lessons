<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_function" value="gen_random_uuid()" dbms="postgresql"/>

    <changeSet author="k.goryunov" id="create-tutors-table">
        <createTable tableName="tutors" remarks="Table with tutors">
            <column name="id" type="${uuid_type}" remarks="Primary key UUID">
                <constraints primaryKey="true" nullable="false" foreignKeyName="fk_tutors_users" references="users(id)"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="false" remarks="if the tutor is active">
                <constraints nullable="false"/>
            </column>

            <column name="bio" type="VARCHAR(500)" remarks="Tutor's biography">
            </column>

            <column name="tags" type="TEXT[]" remarks="tutors tags">
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" remarks="creation timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
